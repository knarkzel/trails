<h1>Tweets</h1>

<%= form_with model: @tweet do |form| %>
    <div>
        <%= form.label :content, "Content" %>
        <%= form.text_area :content, rows: 4, class: "mb-0" %>
        <% if @tweet.errors[:content].any? %>
            <small><%= @tweet.errors.full_messages_for(:content).first %></small>
        <% end %>
    </div>

    <%= form.submit "Post", class: "mt-2" %>
<% end %>

<% @tweets.each do |tweet| %>
    <p class="p-4 bg-slate-100"><%= tweet.content %></p>
<% end %>
